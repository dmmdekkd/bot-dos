.tab-item {
  padding: 1rem 1.5rem;
  cursor: pointer;
  position: relative;
  color: #34495e;
  transition: all 0.3s ease;
}

.tab-item.active {
  background-color: #ecf0f1;
  border-radius: 4px 4px 0 0;
}

.tab-item::after {
  content: "";
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: #3498db;
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.tab-item.active::after {
  transform: scaleX(1);
}

.icon {
  margin-right: 0.8rem;
  font-size: 1.2rem;
}

.content-section {
  padding: 2rem;
  border-radius: 4px;
  margin-top: 2rem;
  display: none;
}

.content-section.active {
  display: block;
}

